<!--home/home.wxml-->
<swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000" circular='true'>  
<block wx:for="{{movies}}" wx:for-index="index">  
  <swiper-item>  
    <image src="{{item.url}}" class="slide-image" mode="aspectFill"/>  
  </swiper-item>  
</block>  
</swiper>  
<view wx:for="{{goods}}" wx:key="{{unque}}">
  商品名称{{goods[index].goods_name}}
  商品介绍{{goods[index].goods_price}}
  商品价格{{goods[index].goods_number}}

</view>                  
